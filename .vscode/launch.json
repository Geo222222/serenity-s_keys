{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI (backend)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8080"],
      "envFile": "${workspaceFolder}/services/backend/serenitys-keys-backend/.env",
      "cwd": "${workspaceFolder}/services/backend/serenitys-keys-backend"
    },
    {
      "name": "Next.js Booking Portal",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/apps/booking-portal",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
